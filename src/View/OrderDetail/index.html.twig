{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Order Detail :</h2>
<div class="text-right my-3">
    <a href="/orderDetail/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total</th>
            <th scope="col">Order_id</th>
            <th scope="col">Product_id</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for orderDetail in orderDetails %}
        <tr>
            <td>{{ orderDetail.id }}</td>
            <td>{{ orderDetail.quantity }}</td>
            <td>{{ orderDetail.total }}</td>
            <td>{{ orderDetail.order_reference }}</td>
            <td>{{ orderDetail.refuge_orderDate }}</td>
            <td>{{ orderDetail.product_name }}</td>
            <td>{{ orderDetail.product_quantity }}</td>
            <td>
                <a href="/orderDetail/show/{{ orderDetail.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/orderDetail/edit/{{ orderDetail.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/orderDetail/delete/{{ orderDetail.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}