{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Products :</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">function</th>
            <th scope="col">quantity</th>
            <th scope="col">Picture</th>
            <th scope="col">durability</th>
        </tr>
    </thead>
    <tbody>
        {% for products in product %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.function }}</td>
            <td>{{ product.quantity }}</td>
            <td>{{product.pictures[0].url}}</td>
            <td>{{product.durability}}</td>
                <a href="/product/show/{{ product.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/product/edit/{{ product.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>

</table>

<div class="text-right my-3">
    <a href="/product/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
{% endblock %}